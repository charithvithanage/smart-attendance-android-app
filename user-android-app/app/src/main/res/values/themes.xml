<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SmartAttendanceAdminApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@mipmap/bg</item>
    </style>

    <style name="Theme.SmartAttendanceAdminApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DialogNoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/dialog_bg_color</item>
    </style>


    <style name="dialog_title_style" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="buttonStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="progressBarStyle" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="colorAccent">@color/color_accent</item>
    </style>

    //Search View Style

    <style name="TextInputLayoutNoBorder" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="errorIconDrawable">@null</item>
        <item name="errorIconTint">@null</item>
        <item name="hintEnabled">false</item>
        <item name="boxBackgroundMode">none</item>
    </style>

    //Rounded User Image Style

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    //Action Bar Title Style

    <style name="action_bar_title_text_style" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">bold</item>
    </style>

    //Content Style

    <style name="content_style" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">bold</item>
    </style>

    //Settings Content Style

    <style name="settings_item_style" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="label_text_style" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="alpha">0.8</item>
    </style>

    //Dialog without action bar

    <style name="Theme.SmartAttendanceAdminApp.DialogNoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/dialog_bg_color</item>
    </style>

    //Select Text View Hind Label Style
    <style name="input_textview_title_style" parent="android:Widget.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    //Select view Error Text Style
    <style name="error_label_style" parent="android:Widget.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/red_button_color</item>
    </style>

    //Radio Button Text style
    <style name="radio_button_text_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    //List Item Button style
    <style name="list_item_style" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    //Text View Hint Text Style(Select Date Label)
    <style name="textview_hint_title_style" parent="android:Widget.TextView">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/color_primary</item>
    </style>

    //Text View Content Text Style(Select Date Content)
    <style name="input_textview_content_style" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    //List view styling
    <style name="list_item_content_text_style" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="list_item_sub_content_text_style" parent="android:Widget.TextView">
        <item name="android:textSize">11sp</item>
        <item name="fontFamily">@font/roboto_condensed_regular</item>
        <item name="android:textColor">@color/color_primary</item>

    </style>



<style name="Theme.SmartAttendanceAdminApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SmartAttendanceAdminApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="report_date_style">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="report_time_style">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="report_time_label_style">
        <item name="android:textColor">@color/color_primary</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>